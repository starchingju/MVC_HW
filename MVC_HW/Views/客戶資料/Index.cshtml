@model IEnumerable<MVC_HW.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>客戶資料</h2>

<p>
    @Html.ActionLink("新增", "Create")
</p>
<form action="/客戶資料/Index" method="get">
    Search(姓名)：
    <input id="keyword" type="search" name="keyword" />
    <input id="Submit1" type="submit" value="搜尋" />
</form>

@*<input id="Button1" type="button" value="匯出EXCEL" />*@
@*@Url.Action("FileExcel", "客戶資料")*@
<p>
    @Html.ActionLink("下載", "FileExcel")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("照片")
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.客戶名稱)*@
            @Html.ActionLink("客戶名稱", "Index", new { keyword = ViewBag.Search, sort_name = "客戶名稱", sort = ViewBag.Sort })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.統一編號)*@
            @Html.ActionLink("統一編號", "Index", new { keyword = ViewBag.Search, sort_name = "統一編號", sort = ViewBag.Sort })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.電話)*@
            @Html.ActionLink("電話", "Index", new { keyword = ViewBag.Search, sort_name = "電話", sort = ViewBag.Sort })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.傳真)*@
            @Html.ActionLink("傳真", "Index", new { keyword = ViewBag.Search, sort_name = "傳真", sort = ViewBag.Sort })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.地址)*@
            @Html.ActionLink("地址", "Index", new { keyword = ViewBag.Search, sort_name = "地址", sort = ViewBag.Sort })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Email)*@
            @Html.ActionLink("Email", "Index", new { keyword = ViewBag.Search, sort_name = "Email", sort = ViewBag.Sort })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.客戶分類)*@
            @Html.ActionLink("客戶分類", "Index", new { keyword = ViewBag.Search, sort_name = "客戶分類", sort = ViewBag.Sort })
            <form method="get">
                <div class="form-inline">
                    <select name="SearchId" onchange="this.form.submit();">
                        <option value=""></option>
                        <option value="四皇">四皇</option>
                        <option value="傳說中的海賊">傳說中的海賊</option>
                        <option value="草帽大船團">草帽大船團</option>
                    </select>
                </div>
            </form>
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("FileDowload","Home")?Name=@Html.DisplayFor(modelItem => item.客戶名稱) ">
                    <img width="50px" src="@Url.Action("FileDowload", "Home", new { Name = item.客戶名稱, IsDonlod =0 })" />
                </a>
                <a href="@Url.Action("FileDowload","Home")?Name=@Html.DisplayFor(modelItem => item.客戶名稱)&IsDonlod=1 ">下載</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶分類)
            </td>
            <td>
                @Html.ActionLink("修改", "Edit", new { id = item.Id }) |
                @Html.ActionLink("明細", "Details", new { id = item.Id }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
